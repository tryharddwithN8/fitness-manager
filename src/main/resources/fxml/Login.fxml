<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="650.0" 
   xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
   fx:controller="com.fitness.controller.LoginController" stylesheets="@../css/login.css">

   <left>
      <AnchorPane prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: gray;" BorderPane.alignment="CENTER">
         <children>
            <Text styleClass="title-main-left" layoutX="24.0" layoutY="184.0"  strokeType="OUTSIDE" strokeWidth="0.0" text="Fitness Manager" wrappingWidth="250"></Text>
         </children>
      </AnchorPane>
   </left>

   <right>
      <AnchorPane prefHeight="400.0" prefWidth="350.0">
         <children>

            <!-- Login -->
            <AnchorPane fx:id="loginPane" prefHeight="450.0" prefWidth="320.0" BorderPane.alignment="CENTER">
               <children>
                  <Text layoutX="81.0" layoutY="141.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User Login" wrappingWidth="150" styleClass="title-right-status"></Text>
                  
                  <TextField fx:id="usernameField" layoutX="49.0" layoutY="160.0" prefHeight="25.0" prefWidth="202.0" promptText="User Name"  styleClass="textfield-right-login"/>
                  <PasswordField fx:id="passwordField" layoutX="49.0" layoutY="203.0" prefHeight="25.0" prefWidth="202.0" promptText="Password" styleClass="textfield-right-login" />
                  
                  <Button fx:id="loginButton" layoutX="112.0" layoutY="255.0" mnemonicParsing="false" text="Login" styleClass="button-right-login" onAction="#handleLogin" />
                  
                  <Text fill="#4299E1" layoutX="130.0" layoutY="330.0" text="Sign Up" style="-fx-cursor: hand; -fx-font-weight: bold;" onMouseClicked="#handleShowSignUp" />
                  <Text fill="#4299E1" layoutX="100.0" layoutY="350.0" text="Forgot Password?" style="-fx-cursor: hand;" onMouseClicked="#handleShowForgotPassword" />
               </children>
            </AnchorPane>
         
            <!-- Signup -->
            <AnchorPane fx:id="signUpPane" prefHeight="400.0" prefWidth="350.0">
               <children>
                  <Text layoutX="81.0" layoutY="81.0" strokeType="OUTSIDE" strokeWidth="0.0" text="SignUp" wrappingWidth="150" styleClass="title-right-status"></Text>

                  <TextField fx:id="signupUsernameField" layoutX="49.0" layoutY="103.0" prefHeight="25.0" prefWidth="202.0" promptText="User Name" styleClass="textfield-right-login" />
                  <TextField fx:id="emailField" layoutX="49.0" layoutY="153.0" prefHeight="25.0" prefWidth="202.0" promptText="Email" styleClass="textfield-right-login" />
                  <PasswordField fx:id="signupPasswordField" layoutX="49.0" layoutY="203.0" prefHeight="25.0" prefWidth="202.0" promptText="Password" styleClass="textfield-right-login" />
                  <PasswordField fx:id="confirmPasswordField" layoutX="49.0" layoutY="253.0" prefHeight="25.0" prefWidth="202.0" promptText="Confirm Password" styleClass="textfield-right-login" />

                  <Button fx:id="signUpButton"  layoutX="112.0" layoutY="305.0" mnemonicParsing="false" styleClass="button-right-login" text="Sign Up" onAction="#handleSignUp" />

                  <Text fill="#4299E1" layoutX="230.0" layoutY="370.0" text="Back" style="-fx-cursor: hand; -fx-font-weight: bold;" onMouseClicked="#initialize" />
               </children>
            </AnchorPane>

            <!-- Fotgot Password -->
            <AnchorPane fx:id="forgotPasswordPane" prefHeight="400.0" prefWidth="350.0">
               <children>
                  <Text layoutX="81.0" layoutY="140.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Forgot Password" wrappingWidth="150" styleClass="title-right-status"></Text>
                  <TextField fx:id="forgotEmailField" layoutX="49.0" layoutY="220.0" prefHeight="25.0" prefWidth="232.0" promptText="Email" focusTraversable="false" styleClass="textfield-right-login"/>
                  <Button fx:id="resetPasswordButton" layoutX="112.0" layoutY="275.0" mnemonicParsing="false"  text="Reset" styleClass="button-right-login" onAction="#handleForgotPassword" />
                  
                  <Text fill="#4299E1" layoutX="230.0" layoutY="370.0" text="Back" styleClass="text-right-return" onMouseClicked="#initialize" />
               </children>
            </AnchorPane>

         </children>
      </AnchorPane>
   </right>

</BorderPane>

